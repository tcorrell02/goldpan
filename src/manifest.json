{
  "manifest_version": 3,
  "name": "Goldpan: LinkedIn Job Search Sifter",
  "version": "1.0.0",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/jobs/search/*",
    "https://www.glassdoor.com/*"
  ],
  "content_scripts": [
    {
      "js": ["src/content/main.ts"],
      "matches": ["https://www.linkedin.com/jobs/search/*"]
    }
  ]
}